## 1. Single scenario: structure + printed values ------------------------------

test_that("print.analysis_list: single scenario prints header, method label, and numeric estimates", {
  set.seed(123)

  # Simulate a simple scenario with 2 cohorts, 1 scenario
  scen <- simulateScenarios(
    n_subjects_list     = list(c(10, 20)),
    response_rates_list = list(c(0.3, 0.6)),
    n_trials            = 50
  )

  analyses <- performAnalyses(
    scenario_list      = scen,
    method_names       = "pooled",
    target_rates       = c(0.5, 0.5),
    n_mcmc_iterations  = 20,
    verbose            = FALSE
  )

  # Get the reference estimates that print.analysis_list should be using
  est_list <- getEstimates(analyses)

  # Handle both shapes:
  # - single-scenario: est_list[[1]] is a matrix
  # - multi-scenario:  est_list[[1]] is a list of matrices
  est_obj <- est_list[[1]]
  if (is.list(est_obj)) {
    est_mat <- est_obj[[1]]
  } else {
    est_mat <- est_obj
  }

  # We know print.analysis_list uses y[, 1:2], i.e. typically Mean and SD
  mean_p1 <- round(est_mat["p_1", "Mean"], digits = 2)
  sd_p1   <- round(est_mat["p_1", "SD"],   digits = 2)

  out <- capture.output(print(analyses))

  # 1) Header line: "analysis_list of 1 scenario with 1 method"
  expect_true(
    any(grepl("analysis_list of 1 scenario with 1 method", out)),
    info = "Header should say we have 1 scenario and 1 method"
  )

  # 2) Scenario label: "  - scenario_1"
  expect_true(
    any(grepl("^  - scenario_1", out)),
    info = "First scenario block label should be 'scenario_1'"
  )

  # 3) Method label: firstUpper('pooled') = "Pooled"
  expect_true(
    any(grepl("Pooled", out)),
    info = "Method name 'Pooled' must be printed as a row label"
  )

  # 4) Check that *actual numeric estimates* (Mean and SD for p_1) appear
  flat_out <- paste(out, collapse = " ")
  mean_str <- sprintf("%.2f", mean_p1)
  sd_str   <- sprintf("%.2f", sd_p1)

  expect_true(
    grepl(mean_str, flat_out),
    info = "Rounded Mean for p_1 from getEstimates() must appear in the printed output"
  )
  expect_true(
    grepl(sd_str, flat_out),
    info = "Rounded SD for p_1 from getEstimates() must appear in the printed output"
  )

  # 5) Footer: MCMC iterations and evidence levels
  expect_true(
    any(grepl("MCMC iterationns per BHM method", out)),
    info = "Footer line must mention MCMC iterations (typo 'iterationns' kept as in code)"
  )
  expect_true(
    any(grepl("Available evidence levels:", out)),
    info = "Footer must list available evidence levels"
  )
})

## 2. Multiple scenarios: scenario-specific blocks and different values --------

test_that("print.analysis_list: multiple scenarios print separate blocks with scenario-specific estimates", {
  set.seed(456)

  n_subj <- c(10, 20)
  rr1    <- c(0.3, 0.6)
  rr2    <- c(0.7, 0.2)

  # 2 scenarios, same n_subjects but different response_rates
  scen_multi <- simulateScenarios(
    n_subjects_list     = list(n_subj, n_subj),
    response_rates_list = list(rr1, rr2),
    n_trials            = 30
  )

  analyses_multi <- performAnalyses(
    scenario_list      = scen_multi,
    method_names       = "pooled",
    target_rates       = c(0.5, 0.5),
    n_mcmc_iterations  = 20,
    verbose            = FALSE
  )

  est_multi <- getEstimates(analyses_multi)

  # For multi-scenario case, est_multi[[1]] is usually a list with one matrix per scenario
  stopifnot(is.list(est_multi[[1]]))
  m1 <- est_multi[[1]][[1]]
  m2 <- est_multi[[1]][[2]]

  mean1 <- round(m1["p_1", "Mean"], 2)
  mean2 <- round(m2["p_1", "Mean"], 2)

  out <- capture.output(print(analyses_multi))
  flat_out <- paste(out, collapse = " ")

  # 1) Header: now 2 scenarios with 1 method
  expect_true(
    any(grepl("analysis_list of 2 scenarios with 1 method", out)),
    info = "Header should reflect 2 scenarios and 1 method"
  )

  # 2) Two separate scenario blocks
  expect_true(any(grepl("^  - scenario_1", out)),
              info = "scenario_1 header must be printed")
  expect_true(any(grepl("^  - scenario_2", out)),
              info = "scenario_2 header must be printed")

  # 3) Scenario-specific Means for p_1 must both appear
  mean1_str <- sprintf("%.2f", mean1)
  mean2_str <- sprintf("%.2f", mean2)

  expect_true(
    grepl(mean1_str, flat_out),
    info = "Scenario 1 Mean(p_1) should be printed somewhere in its block"
  )
  expect_true(
    grepl(mean2_str, flat_out),
    info = "Scenario 2 Mean(p_1) should be printed somewhere in its block"
  )

  # They are allowed (and expected) to differ if response rates differ
  expect_false(
    isTRUE(all.equal(mean1, mean2)),
    info = "Means for p_1 in the two scenarios should typically differ with different data"
  )
})

## 3. digits argument: controls rounding of printed numbers --------------------

test_that("print.analysis_list: digits argument changes numeric precision of printed estimates", {
  set.seed(789)

  scen <- simulateScenarios(
    n_subjects_list     = list(c(10, 20)),
    response_rates_list = list(c(0.33, 0.66)),
    n_trials            = 40
  )

  analyses <- performAnalyses(
    scenario_list      = scen,
    method_names       = "pooled",
    target_rates       = c(0.5, 0.5),
    n_mcmc_iterations  = 20,
    verbose            = FALSE
  )

  est_list <- getEstimates(analyses)
  est_obj  <- est_list[[1]]
  if (is.list(est_obj)) {
    est_mat <- est_obj[[1]]
  } else {
    est_mat <- est_obj
  }
  mean_p1  <- est_mat["p_1", "Mean"]

  # Capture with low vs high precision
  out_2 <- capture.output(print(analyses, digits = 2))
  out_4 <- capture.output(print(analyses, digits = 4))

  flat_2 <- paste(out_2, collapse = " ")
  flat_4 <- paste(out_4, collapse = " ")

  fmt2 <- sprintf("%.2f", round(mean_p1, 2))
  fmt4 <- sprintf("%.4f", round(mean_p1, 4))

  # With digits = 2, a 2-decimal version must appear
  expect_true(
    grepl(fmt2, flat_2),
    info = "digits = 2 should print Mean(p_1) rounded to 2 decimals"
  )

  # With digits = 4, a 4-decimal version must appear (more precise string)
  expect_true(
    grepl(fmt4, flat_4),
    info = "digits = 4 should print Mean(p_1) rounded to 4 decimals"
  )
})
