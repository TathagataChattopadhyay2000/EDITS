# Reconstruct what the function *should* be using as true_rr[3]:
  true_rr_raw <- analyses_list[[1]]$scenario_data$response_rates
  n_subj      <- analyses_list[[1]]$scenario_data$n_subjects[1, ]
  expected_true_rr3 <- true_rr_raw[3] / n_subj[3]  # 3 / 30 = 0.1

  # From the output we know:
  #   Bias = point_estimate - true_rr_used
  # so point_estimate = Bias + true_rr_used
  # Assume they used the *correct* true_rr (3 / n) to get point_estimate:
  point_estimate3 <- bias_p3 + expected_true_rr3

  # Now compute what the bias WOULD have been if they had wrongly used true_rr = 3
  wrong_bias <- point_estimate3 - true_rr_raw[3]

  # If historic correction works, |Bias(using 3/n)| should be much smaller than |Bias(using 3)|
  expect_true(abs(bias_p3) < abs(wrong_bias))
