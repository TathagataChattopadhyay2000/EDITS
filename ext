model{
    mu    ~ dnorm(mean_mu, precision_mu)
    tau   ~ dt(0, precision_tau, 1) T(0,)
    sigma ~ dt(0, precision_sigma, 1) T(0,)

    prec_tau   <- 1 / pow(tau, 2)
    prec_sigma <- 1 / pow(sigma, 2)

    for (j in 1:J){
      theta[j] ~ dnorm(mu, prec_tau)
      for (i in 1:n[j]){
        y[i,j] ~ dnorm(theta[j], prec_sigma)
      }
    }
  }
